---
// Empty State Illustration Component
// Blueprint/Building Plan style
// Used for empty blog lists or "coming soon" sections
---

<svg
    width="200"
    height="140"
    viewBox="0 0 200 140"
    fill="none"
    class="text-muted-foreground/30"
>
    <!-- Grid lines (blueprint style) -->
    <line
        x1="0"
        y1="20"
        x2="200"
        y2="20"
        stroke="currentColor"
        stroke-width="1"
        stroke-dasharray="4 4"></line>
    <line
        x1="0"
        y1="60"
        x2="200"
        y2="60"
        stroke="currentColor"
        stroke-width="1"
        stroke-dasharray="4 4"></line>
    <line
        x1="0"
        y1="100"
        x2="200"
        y2="100"
        stroke="currentColor"
        stroke-width="1"
        stroke-dasharray="4 4"></line>
    <line
        x1="40"
        y1="0"
        x2="40"
        y2="140"
        stroke="currentColor"
        stroke-width="1"
        stroke-dasharray="4 4"></line>
    <line
        x1="100"
        y1="0"
        x2="100"
        y2="140"
        stroke="currentColor"
        stroke-width="1"
        stroke-dasharray="4 4"></line>
    <line
        x1="160"
        y1="0"
        x2="160"
        y2="140"
        stroke="currentColor"
        stroke-width="1"
        stroke-dasharray="4 4"></line>

    <!-- Main building outline -->
    <rect
        x="50"
        y="40"
        width="100"
        height="80"
        stroke="currentColor"
        stroke-width="1.5"
        fill="none"
        rx="2"></rect>

    <!-- Roof/top section -->
    <line
        x1="50"
        y1="55"
        x2="150"
        y2="55"
        stroke="currentColor"
        stroke-width="1"></line>

    <!-- Windows row 1 -->
    <rect
        x="60"
        y="65"
        width="15"
        height="12"
        stroke="currentColor"
        stroke-width="1"
        fill="none"></rect>
    <rect
        x="92"
        y="65"
        width="15"
        height="12"
        stroke="currentColor"
        stroke-width="1"
        fill="none"></rect>
    <rect
        x="125"
        y="65"
        width="15"
        height="12"
        stroke="currentColor"
        stroke-width="1"
        fill="none"></rect>

    <!-- Windows row 2 -->
    <rect
        x="60"
        y="85"
        width="15"
        height="12"
        stroke="currentColor"
        stroke-width="1"
        fill="none"></rect>
    <rect
        x="125"
        y="85"
        width="15"
        height="12"
        stroke="currentColor"
        stroke-width="1"
        fill="none"></rect>

    <!-- Door -->
    <rect
        x="88"
        y="100"
        width="24"
        height="20"
        stroke="currentColor"
        stroke-width="1"
        fill="none"></rect>
    <circle cx="108" cy="110" r="2" fill="currentColor"></circle>

    <!-- Dimension lines -->
    <line
        x1="50"
        y1="130"
        x2="150"
        y2="130"
        stroke="currentColor"
        stroke-width="0.75"></line>
    <line
        x1="50"
        y1="127"
        x2="50"
        y2="133"
        stroke="currentColor"
        stroke-width="0.75"></line>
    <line
        x1="150"
        y1="127"
        x2="150"
        y2="133"
        stroke="currentColor"
        stroke-width="0.75"></line>

    <!-- Small annotation marks -->
    <circle
        cx="30"
        cy="70"
        r="8"
        stroke="currentColor"
        stroke-width="0.75"
        fill="none"></circle>
    <text x="30" y="73" text-anchor="middle" font-size="8" fill="currentColor"
        >A</text
    >

    <circle
        cx="170"
        cy="70"
        r="8"
        stroke="currentColor"
        stroke-width="0.75"
        fill="none"></circle>
    <text x="170" y="73" text-anchor="middle" font-size="8" fill="currentColor"
        >B</text
    >
</svg>
