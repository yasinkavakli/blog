---
const navItems = [
  { href: "/", label: "Home" },
  { href: "/blog", label: "Writing" },
  { href: "/about", label: "About" },
];
---

<header class="sticky top-6 z-50 mx-4 md:mx-auto px-3 py-2 md:py-3 bg-white/80 dark:bg-neutral-950/80 backdrop-blur-md border border-neutral-200/50 dark:border-neutral-800/50 rounded-lg md:rounded-2xl w-full" style="max-width: 748px;">
  <div
    class="flex justify-between items-center flex-col md:flex-row gap-4 md:gap-0 w-full"
  >
    <a
      href="/"
      class="text-lg font-bold text-neutral-900 dark:text-neutral-100 hover:text-neutral-600 dark:hover:text-neutral-400 transition-colors"
    >
      Yasin Kavakli
    </a>
    <nav>
      <ul
        class="flex gap-6 md:gap-6 list-none p-0 m-0 flex-wrap justify-center"
      >
        {
          navItems.map((item) => (
            <li>
              <a
                href={item.href}
                class:list={[
                  "text-sm text-neutral-600 dark:text-neutral-400 hover:text-neutral-900 dark:hover:text-neutral-100 transition-colors",
                  Astro.url.pathname === item.href &&
                    "text-neutral-900! dark:text-neutral-100!",
                ]}
              >
                {item.label}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
</header>
