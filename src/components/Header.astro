---
const navItems = [
  { href: "/", label: "Home" },
  { href: "/blog", label: "Writing" },
  { href: "/about", label: "About" },
  // { href: "/projects", label: "Projects" },
  { href: "/uses", label: "Uses" },
  // { href: "/links", label: "Links" },
];

interface Props {
  transparent?: boolean;
  textColor?: "light" | "dark";
}

const { transparent = false, textColor } = Astro.props;

const isDark = textColor === "dark";
---

<header class="w-full max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-6 z-50" role="banner">
  <div class="flex flex-col md:flex-row justify-between items-center gap-4">
    <a
      href="/"
      aria-label="Home - Yasin Kavakli"
      class:list={[
        "text-lg font-semibold tracking-tight transition-colors",
        transparent
          ? isDark
            ? "text-black hover:text-black/80"
            : "text-white hover:text-white/80"
          : "text-foreground hover:text-foreground/80",
      ]}
    >
      Yasin Kavakli
    </a>

    <nav role="navigation" aria-label="Main navigation">
      <ul class="flex items-center gap-6">
        {
          navItems.map((item) => (
            <li>
              <a
                href={item.href}
                aria-current={
                  Astro.url.pathname === item.href ||
                  (item.href !== "/" &&
                    Astro.url.pathname.startsWith(item.href))
                    ? "page"
                    : undefined
                }
                class:list={[
                  "text-sm font-medium transition-colors",
                  transparent
                    ? isDark
                      ? "text-black/70 hover:text-black"
                      : "text-white/70 hover:text-white/90"
                    : "text-muted-foreground hover:text-foreground",
                  Astro.url.pathname === item.href ||
                  (item.href !== "/" &&
                    Astro.url.pathname.startsWith(item.href))
                    ? transparent
                      ? isDark
                        ? "!text-black font-semibold"
                        : "!text-white font-semibold"
                      : "!text-foreground font-semibold"
                    : "",
                ]}
              >
                {item.label}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
</header>
