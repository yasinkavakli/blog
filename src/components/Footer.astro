---
import ThemeToggle from "./ThemeToggle.astro";

const today = new Date();
---

<footer
	class="w-full max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8 md:py-12 font-[Khand,sans-serif]"
	role="contentinfo"
>
	<div
		class="flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-muted-foreground"
	>
		<p>
			&copy; {today.getFullYear()} Yasin Kavakli. All rights reserved.
		</p>
		<div class="flex items-center gap-6">
			<ThemeToggle />
			<nav aria-label="Social links">
				<ul class="flex items-center gap-4">
					<li>
						<a
							href="/rss.xml"
							aria-label="RSS Feed"
							class="hover:text-foreground transition-colors">RSS</a
						>
					</li>
					<li>
						<a
							href="https://twitter.com/yasinkavakliat"
							target="_blank"
							rel="noopener noreferrer"
							aria-label="Twitter Profile"
							class="hover:text-foreground transition-colors">Twitter</a
						>
					</li>
					<li>
						<a
							href="https://github.com/yasinkavakli"
							target="_blank"
							rel="noopener noreferrer"
							aria-label="GitHub Profile"
							class="hover:text-foreground transition-colors">GitHub</a
						>
					</li>
				</ul>
			</nav>
		</div>
	</div>
</footer>
