---
import { type CollectionEntry, getCollection, render } from "astro:content";
import BlogPost from "../../layouts/BlogPost.astro";
import { generateSlugFromTitle } from "../../lib/slug";

export async function getStaticPaths() {
	// Filter out drafts in production, show all in dev
	const posts = await getCollection("blog", ({ data }) => {
		return import.meta.env.PROD ? data.draft !== true : true;
	});
	return posts.map((post) => ({
		params: { slug: post.data.slug || post.id },
		props: { ...post, slug: post.data.slug || post.id },
	}));
}
type Props = CollectionEntry<"blog"> & { slug: string };

const { slug, ...post } = Astro.props;
const { Content, remarkPluginFrontmatter } = await render(post);
---

<BlogPost
	{...post.data}
	slug={slug}
	minutesRead={remarkPluginFrontmatter.minutesRead}
>
	<Content />
</BlogPost>
