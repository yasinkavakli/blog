---
import BaseLayout from "../layouts/BaseLayout.astro";

const breadcrumbs = [{ label: "404 - Page Not Found" }];
---

<BaseLayout title="404 - Page Not Found" description="The page you're looking for doesn't exist." breadcrumbs={breadcrumbs}>
	<main class="w-full max-w-xl px-4">
		<div class="flex flex-col gap-8 py-12">
			<section class="flex flex-col gap-4 text-center">
				<h1 class="text-4xl font-semibold tracking-tight">
					404
				</h1>
				<p class="text-muted-foreground leading-relaxed text-lg">
					The page you're looking for doesn't exist or has been moved.
				</p>
				<a 
					href="/" 
					class="text-foreground font-medium hover:underline underline-offset-4 w-fit mx-auto"
				>
					Back to home â†’
				</a>
			</section>
		</div>
	</main>
</BaseLayout>
