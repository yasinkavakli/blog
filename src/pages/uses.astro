---
import BlogLayout from "../layouts/BlogLayout.astro";

const title = "Uses";
const description =
    "A curated list of the hardware, software, and tools I use daily.";

const categories = [
    {
        title: "Workstation",
        items: [
            { name: '16" MacBook Pro', description: "M3 Max, 64GB RAM" },
            {
                name: "Pro Display XDR",
                description: "The best display I've ever used",
            },
            {
                name: "Keychron Q1 Pro",
                description: "Custom mechanical keyboard with Banana switches",
            },
            {
                name: "Logitech MX Master 3S",
                description: "Standard issue for productivity",
            },
        ],
    },
    {
        title: "Software",
        items: [
            {
                name: "VS Code",
                description: "My editor of choice with the GitHub Dark theme",
            },
            {
                name: "Raycast",
                description: "Spotlight replacement on steroids",
            },
            {
                name: "Arc Browser",
                description: "A fresh take on web browsing",
            },
            { name: "Figma", description: "For all design work" },
        ],
    },
    {
        title: "Audio & Video",
        items: [
            {
                name: "Sony A7IV",
                description: "For high quality video calls and photography",
            },
            {
                name: "Shure SM7B",
                description: "The classic podcast microphone",
            },
            {
                name: "Elgato Key Light",
                description: "essential for good lighting",
            },
        ],
    },
];
---

<BlogLayout title={title} description={description}>
    <div class="max-w-3xl mx-auto px-4 py-12 md:py-20">
        <div class="space-y-16">
            <div class="text-center space-y-4">
                <h1
                    class="text-4xl md:text-5xl font-bold tracking-tight text-foreground"
                >
                    Uses
                </h1>
                <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
                    A living document of the tools that power my workflow.
                </p>
            </div>

            {
                categories.map((category) => (
                    <section class="space-y-6">
                        <h2 class="text-2xl font-bold tracking-tight text-foreground border-b border-border pb-2">
                            {category.title}
                        </h2>
                        <div class="grid gap-6">
                            {category.items.map((item) => (
                                <div class="group flex flex-col sm:flex-row sm:items-baseline gap-1 sm:gap-4">
                                    <span class="font-semibold text-foreground min-w-[200px] group-hover:text-primary transition-colors">
                                        {item.name}
                                    </span>
                                    <span class="text-muted-foreground text-sm sm:text-base">
                                        {item.description}
                                    </span>
                                </div>
                            ))}
                        </div>
                    </section>
                ))
            }

            <div class="text-center pt-8 text-sm text-muted-foreground">
                <p>Last updated: January 2026</p>
            </div>
        </div>
    </div>
</BlogLayout>
