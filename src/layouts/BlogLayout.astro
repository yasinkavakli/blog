---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
    title: string;
    description?: string;
    ogImage?: string;
    mainClass?: string;
    transparentHeader?: boolean;
    headerTextColor?: "light" | "dark";
    type?: "website" | "article";
}

const {
    title,
    description = "A minimalist blog.",
    ogImage = "/og/default.png",
    mainClass,
    transparentHeader = false,
    headerTextColor,
    type = "website",
} = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title={title} description={description} image={ogImage} type={type} />
    </head>
    <body
        class="bg-background text-foreground antialiased selection:bg-primary selection:text-white flex flex-col min-h-screen"
    >
        <a
            href="#main-content"
            class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-primary focus:text-primary-foreground focus:rounded-md"
        >
            Skip to main content
        </a>
        <div
            class={transparentHeader
                ? "absolute top-0 left-0 right-0 z-50"
                : ""}
        >
            <Header
                transparent={transparentHeader}
                textColor={headerTextColor}
            />
        </div>

        <main
            id="main-content"
            role="main"
            class:list={[
                "flex-1 w-full",
                mainClass
                    ? mainClass
                    : "max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8 md:py-12",
            ]}
        >
            <slot />
        </main>
        <Footer />
    </body>
</html>
