---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_DESCRIPTION } from "../consts";
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={SITE_DESCRIPTION} />
  </head>
  <body
    class="bg-slate-200 dark:bg-slate-900 font-sans min-h-screen prose-lg flex flex-col prose dark:prose-invert max-w-none h-screen antialiased scroll-smooth prose-hr:text-slate-500 prose-a:text-slate-600 dark:hover:prose-a:text-slate-400 hover:prose-a:text-slate-700 prose-img:rounded-lg"
  >
    <Header />

    <div
      class="container mx-auto px-8 lg:px-0 flex justify-center flex-col flex-1 py-12"
    >
      <main class="p-4 max-w-prose">
        <slot />
      </main>
    </div>
    <Footer />
  </body>
</html>
